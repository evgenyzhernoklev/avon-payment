                .paymentList__itemCol
                  a.paymentList__itemButton.linkButton.linkButton--redTransparent href="#" Оплатить
                  a.paymentList__itemLink href="#" Регистрация в системе
              .paymentList__item
                .paymentList__itemCol
                  .paymentList__logoWrapper.logoWrapper
                    include icons/sberbank-online
                  .paymentList__itemColIn
                    p.paymentList__itemName Сбербанк Онлайн
                    span.paymentList__itemLabel.infoLabel КОМИССИЯ 1%
                    p.paymentList__itemInfo
                      i Сумма платежа:
                      |  от 1 до 15 000 руб.
                .paymentList__itemCol
                  a.paymentList__itemButton.linkButton.linkButton--redTransparent href="#" Оплатить
                  a.paymentList__itemLink href="#" Регистрация в системе
              .paymentList__item
                .paymentList__itemCol
                  .paymentList__logoWrapper.logoWrapper
                    img.icon src="static/images/gi3/logos/alfa-click.png"
                  .paymentList__itemColIn
                    p.paymentList__itemName Альфа-Клик
                    span.paymentList__itemLabel.infoLabel КОМИССИЯ 1,7%
                    p.paymentList__itemInfo
                      i Сумма платежа:
                      |  от 1 руб.
                .paymentList__itemCol
                  a.paymentList__itemButton.linkButton.linkButton--redTransparent href="#" Оплатить
                  a.paymentList__itemLink href="#" Регистрация в системе

    include scripts
